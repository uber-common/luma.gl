{
  "name": "luma.gl",
  "version": "2.0.3",
  "description": "A WebGL JavaScript visualization library.",
  "license": "MIT",
  "author": "Ib Green <ib@uber.com>",
  "contributors": [
    "Nicolas Belomonte <nico@uber.com>",
    "Rye Terrell <ryeterrell@ryeterrell.net"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/uber-common/luma.gl"
  },
  "keywords": [
    "webgl",
    "w3c",
    "visualization",
    "canvas",
    "animation",
    "3d"
  ],
  "main": "src/index.js",
  "browserify": {
    "transform": [
      "babelify",
      "glslify"
    ]
  },
  "standard": {
    "ignore": [
      "**/build/**",
      "**/dist/**",
      "**/examples/**",
      "**/Documents/**"
    ]
  },
  "dependencies": {
    "babel-polyfill": "6.5.0",
    "canvas-to-blob": "0.0.0",
    "filesaver.js": "^0.2.0",
    "gl-format-compiler-error": "^1.0.2",
    "global": "^4.3.0"
  },
  "devDependencies": {
    "babel-cli": "6.5.1",
    "babel-core": "6.5.1",
    "babel-eslint": "4.1.8",
    "babel-plugin-transform-builtin-extend": "1.1.0",
    "babel-preset-es2015": "6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "budo": "^8.0.3",
    "electron-prebuilt": "^0.37.2",
    "testron": "^1.2.0",
    "eslint": "^1.9.0",
    "eslint-plugin-react": "^4.2.3",
    "faucet": "0.0.1",
    "glslify": "^5.0.2",
    "husky": "^0.10.2",
    "tap-browser-color": "^0.1.2",
    "tape-catch": "^1.0.4",
    "uber-standard": "^5.1.0",
    "uglify-js": "^2.6.1"
  },
  "scripts": {
    "build-docs": "rm -fr _docs/* && jekyll build --source=docs",
    "build": "npm run build-clean && npm run build-compile && npm run build-scripts",
    "build-clean": "rm -fr dist/*",
    "build-compile": "babel src -d dist --source-maps inline --copy-files",
    "build-scripts": "npm run build-script-main && npm run build-script-addons",
    "build-script-main": "browserify src/bundle.js --debug -o dist/lumagl.js && cat dist/lumagl.js | uglifyjs > dist/lumagl.min.js",
    "build-script-addons": "browserify src/addons/index.js -o dist/lumagl-addons.js --debug | uglifyjs > dist/lumagl-addons.min.js",
    "watch-scripts": "npm run watch-script-main & npm run watch-script-addons",
    "watch-script-main": "watchify src/bundle.js -v --debug -o dist/lumagl.js",
    "watch-script-addons": "watchify src/addons/index.js -v --debug -o dist/lumagl-addons.js",
    "prepublish": "npm run build",
    "docs": "npm run build-docs && open ./_docs/index.html",
    "lint": "uber-standard",
    "precommit": "npm run lint -s && npm run test && npm run build",
    "test": "npm run lint && npm run test-node",
    "test-node": "babel-node --include='' test/index.js | faucet",
    "test-browser": "budo test/browser.js:build/test-bundle.js --dir test -t babelify --live --open --port 3001 --watch-glob '**/*.{html,css,scss,js}'",
    "test-electron": "browserify test/electron.js | testron | faucet",
    "start": "echo Budo does not support multiple entry points. #budo src/bundle.js:dist/lumagl.js -t babelify --live --open --port 3000 --watch-glob '**/*.{html,css,js}'"
  }
}
